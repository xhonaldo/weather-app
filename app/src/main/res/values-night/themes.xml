<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Background and text for dark mode -->
        <item name="android:colorBackground">@color/backgroundNight</item>
        <item name="colorOnPrimary">@color/textPrimaryDark</item>
        <item name="colorOnSecondary">@color/textSecondaryDark</item>
        <item name="colorOnBackground">@color/textPrimaryDark</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
    </style>
</resources>